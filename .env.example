#-----------------------------------------------------------------------------#
# Azure OpenAI API配置 (用于GPT-4o)
#-----------------------------------------------------------------------------#
# 端点格式: https://your-resource-name.openai.azure.com
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com
# 部署名称 - 确保这是GPT-4o模型的部署名称
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name

#-----------------------------------------------------------------------------#
# Phi-4-Multimodel配置
#-----------------------------------------------------------------------------#
# 使用Azure AI Inference服务
# 端点格式: https://your-resource-name.inference.ml.azure.com
AZURE_PHI4_API_KEY=your_phi4_api_key
AZURE_PHI4_ENDPOINT=https://your-resource-name.inference.ml.azure.com
# 模型名称通常是 Phi-4-multimodal-instruct 或您的自定义部署名称
AZURE_PHI4_DEPLOYMENT_NAME=Phi-4-multimodal-instruct

#-----------------------------------------------------------------------------#
# YOLO配置
#-----------------------------------------------------------------------------#
# 相对路径，基于项目根目录
YOLO_WEIGHTS_PATH=models/yolov8s.pt
YOLO_CONFIDENCE_THRESHOLD=0.4

#-----------------------------------------------------------------------------#
# 视频处理配置
#-----------------------------------------------------------------------------#
# 视频分段长度(秒)
VIDEO_SEGMENT_LENGTH=60
# 提取帧的频率(每秒)
VIDEO_FRAME_RATE=5
# 场景变化检测阈值(百分比，越低检测到的变化越多)
SCENE_THRESHOLD=20
# 固定帧间隔(每N帧提取一帧)
FIXED_INTERVAL=15
# 关键帧筛选置信度阈值(0-1之间)
CONFIDENCE_THRESHOLD=0.5
# 是否添加调试输出
ENABLE_DEBUG=True
